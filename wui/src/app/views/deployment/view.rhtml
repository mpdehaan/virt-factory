<!-- question: is this in use?  view? -->

      <% @page_title = "View Machine" %>
      <%= ApplicationHelper.menubar("machine","view") %>

      <div id="content-main">
      <TABLE BORDER=0>
         <TR>
            <TD>Virtual Hostname</TD>
            <TD><%= @item.hostname %></TD>
         </TR>
         <TR> 
            <TD>Virtual IP Address</TD>
            <TD><%= @item.ip_address %></TD>
         </TR>
         <TR>
            <TD>Virtual MAC Address</TD>
            <TD><%= @item.mac_address %></TD>
         </TR>
         <TR>
            <!-- FIXME: is this level of display nesting needed? -->
            <TD>Host Machine</TD>
            <TD>
                <% if @item.machine %>
                    <TABLE BORDER=0>
                       <TR>
                          <TD>Hostname</TD>
                          <TD><%= @item.machine.hostname %></TD>
                       </TR>
                       <TR>
                          <TD>Architecture</TD>
                          <TD><%= @item.machine.architecture %></TD>
                       </TR>
                       <TR> 
                          <TD>Procesor Speed</TD>
                          <TD><%= @item.machine.processor_speed %></TD>
                       </TR>
                       <TR> 
                          <TD>Procesor Count</TD>
                          <TD><%= @item.machine.processor_count %></TD>
                       </TR>
                       <TR> 
                          <TD>Memory</TD>
                          <TD><%= @item.machine.memory %></TD>
                       </TR>
                    </TABLE>
                <% end %>
            </TD>
         </TR>
         <TR>
            <TD>Profile</TD>
            <TD>
                <% if @item.profile %>
                    <TABLE BORDER=0>
                        <TR>
                            <TD>Name</TD>
                            <TD><%= @item.profile.name %></TD>
                        </TR>
                        <TR> 
                            <TD>Version</TD>
                            <TD><%= @item.profile.version %></TD>
                        </TR>
                        <TR> 
                            <TD>Filename</TD>
                            <TD><%= @item.profile.filename %></TD>
                        </TR>
                        <TR>
                            <TD>Specfile</TD>
                            <TD><%= @item.profile.specfile %></TD>
                        </TR>
                        <TR>
			    <TD>Puppet Classes</TD>
			    <TD><%= @item.profile.puppet_classes %></TD>
			</TR>
                    </TABLE>
                <% end %>
            </TD>
         </TR>
         <TR> 
            <TD>State</TD>
            <TD><%= @item.state %></TD>
         </TR>
         <TR>
            <TD>Puppet Class Node Overrides</TD>
            <TD><%= @item.puppet_node_diff %></TD>
         </TR>
      </TABLE>
      </div>
      <% @callout_1 = "View a deployment" %>

