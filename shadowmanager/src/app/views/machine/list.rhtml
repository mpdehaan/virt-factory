      <% @page_title = "Machines" %>
      <%= ApplicationHelper.menubar("machine","list") %>
     
      <div id="content-main">
      <TABLE class='listing'>
         <TR>
            <TD>Address</TD>
            <TD>Architecture</TD>
            <TD>Processor Speed</TD>
            <TD>Processor Count</TD>
            <TD>Memory</TD>
            <TD>Distribution</TD>
            <TD>Kernel Options</TD>
            <TD>Kickstart Metadata</TD>
            <TD>List Group</TD>
         </TR>
      <%# FIXME: this may be a result of what objects are being sent over from Python. %>
      <%# FIXME: web svc should return a hash not a list %>
      <% @items.each do |item| %>
         <TR>
             
             <TD> <%= link_to item.address, :controller => "machine", :action=> "view", :id=> item.id %></TD>
             <TD> <%= item.architecture %> </TD>
             <TD> <%= item.processor_speed %> </TD>
             <TD> <%= item.processor_count %> </TD>
             <TD> <%= item.memory %> </TD>
             <TD> <%= item.get_distribution.name if item.get_distribution %> </TD>
             <TD> <%= item.kernel_options %> </TD>
             <TD> <%= item.kickstart_metadata %> </TD>
             <TD> <%= item.list_group %> </TD>
             <TD> <%= link_to "edit", :controller => "machine", :action=> "edit", :id=> item.id %></TD>
             <TD> <%= link_to "X", :controller => "machine", :action=> "delete", :id=> item.id %></TD>
         </TR>
      <% end %>
      </TABLE>
      </div>
      <% @callout_1 = "This page lists machines that can run appliances." %>
